{
    "include": ["index.d.ts", "./test/**/*.js", "./rollup.config.js"],
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "noEmit": true,
        "checkJs": true,
        "allowJs": true,
        "pretty": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    }
}
